{
  "version": 2,
  "buildCommand": "cd Client && npm install && npm run build",
  "outputDirectory": "Client/dist",
  "devCommand": "node server/server.js",
  "env": {
    "MONGO_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_secret",
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ]
}
